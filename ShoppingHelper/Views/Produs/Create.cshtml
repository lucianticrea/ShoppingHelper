@model ShoppingHelper.Produs

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Produs</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdTipProdus)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.IdTipProdus, new SelectList(new ShoppingHelper.ShoppingContext().TipProduse, "Id", "Denumire")) 
            @Html.ValidationMessageFor(model => model.IdTipProdus)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pret)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pret)
            @Html.ValidationMessageFor(model => model.Pret)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
