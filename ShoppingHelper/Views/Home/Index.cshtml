@{
    ViewBag.Title = "Home Page";
}

<div>

    <div id="content">
        <div class="title"></div>

        <div class="navigation" id="nav">

            <div class="item user">
                <img src="../../Content/themes/base/images/bg_user.png" alt="" width="199" height="199" class="circle" />

                <a href="#" class="icon"></a>
                <h2>User</h2>
                <ul>
                    <li>@Html.Partial("_LogOnPartial")</li>
                </ul>
            </div>
            <div class="item home">
                <img src="../../Content/themes/base/images/bg_home.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>

                <ul>
                    <li>@Html.ActionLink("Home", "About", "Home")</li>
                </ul>

                <h2>Home</h2>
            </div>
            <div class="item shop">
                <img src="../../Content/themes/base/images/bg_shop.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Shop</h2>
                <ul>
                    <li>@Html.ActionLink("Produs", "Index", "Produs")</li>
                    <li>@Html.ActionLink("Tip Produs", "Index", "TipProdus")</li>
                    <li>@Html.ActionLink("Comanda", "Comanda", "TipProdus")</li>
                </ul>
            </div>
            <div class="item camera">
                <img src="../../Content/themes/base/images/bg_camera.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Localizare</h2>
                <ul>
                    <li>
                        @Html.ActionLink("Harta", "Localizare", "Home")
                    </li>

                </ul>
            </div>
            <div class="item fav">
                <img src="../../Content/themes/base/images/bg_fav.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Love</h2>
                <ul>
                    <li><a href="http://www.cora.ro">Cora</a></li>
                    <li><a href="http://www.carrefour.ro/">Carrefour</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- The JavaScript -->
    <script type="text/javascript">
        $(function () {
            $('#nav> div').hover(
            function () {
                var $this = $(this);
                $this.find('img').stop().animate({
                    'width': '199px',
                    'height': '199px',
                    'top': '-25px',
                    'left': '-25px',
                    'opacity': '1.0'
                }, 500, 'easeOutBack', function () {
                    $(this).parent().find('ul').fadeIn(700);
                });

                $this.find('a:first,h2').addClass('active');
            },
            function () {
                var $this = $(this);
                $this.find('ul').fadeOut(500);
                $this.find('img').stop().animate({
                    'width': '52px',
                    'height': '52px',
                    'top': '0px',
                    'left': '0px',
                    'opacity': '0.1'
                }, 5000, 'easeOutBack');

                $this.find('a:first,h2').removeClass('active');
            }
        );
        });
    </script>
</div>
